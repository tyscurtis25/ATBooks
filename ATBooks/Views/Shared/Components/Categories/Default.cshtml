@{
}

@model IEnumerable<string>

<div class="col bg-category-nav">

   <a asp-controller="Home" asp-action="Index" asp-route-bookCategory=""
       asp-route-pageNum="1" class="btn btn-outline-primary btn-outline-primary-nav pt-1 pb-1">All</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
        class="btn @(ViewBag.SelectedCategory == c ? "btn-primary": "btn-outline-primary") pt-1 pb-1">@c</a>
    }

</div>