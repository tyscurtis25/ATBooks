@{
}

@{ 
    Layout = null;
}

@model LoginModel

<DOCTYPE! html>
<html>

<head>
    <meta /> 
    <title>ATBooks Login</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/css/main.css" rel="stylesheet" />
</head>

<body class="container col-4 login-bg">
    <br /><br /><br /><br />
    <div class="admin-container">
        <div class="mt-5 text-white p-2 card-header bg-admin">
            <span class="navbar-brand m-l-2">ATBooks Login</span>
        </div>
        <div class="card-body shadow-sm">
            <div class="p-1">
                <div class="text-danger" asp-validation-summary="All"></div>

                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="form-group mb-1">
                        <label asp-for="Username">Username:</label>
                        <input asp-for="Username" class="form-control" />
                    </div>

                    <div class="form-group mb-1">
                        <label asp-for="Password">Password:</label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <button class="mt-2 btn btn-admin2" type="submit">Log in</button>
                    <input type="hidden" asp-for="ReturnUrl" />
                </form>

            </div>
        </div>
    </div>
        
</body>

</html>