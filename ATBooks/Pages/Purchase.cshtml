@page
@model ATBooks.Pages.PurchaseModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.shoppingCart.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>$@i.Book.Price</td>
            <td>$@i.Book.Price</td>

            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-outline-success">Remove</button>
                </form>
            </td>
        </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.shoppingCart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-outline-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-outline-primary" asp-action="Checkout" asp-controller="Purchase">Checkout</a>
</div>